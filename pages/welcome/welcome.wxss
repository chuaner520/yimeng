.container{
  height: 100vh;
  display: flex;
  align-items: center;
}
.logo_info{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
  margin-top: 200rpx;
}
@keyframes logo{
  0%{
    opacity: 0;
    margin-top: -300rpx;
    overflow: hidden;
  }
  100%{

  }
}
.logo_info image{
  width: 100%;
  height: 100%;
  animation: logo ease 1s;
}
.demo_name{
  font-weight: bold;
  color: #333;
}
.progress-box{
  margin-top: 100rpx;
}