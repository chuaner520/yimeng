/* pages/shequ/shequ.wxss */
.search{
  width: 95%;
}
.search form{
  width: 100%;
  height: 60rpx;
}
.search .fomr{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fomr button:not([size=mini]) {
  width: 20%;
  background-color: royalblue;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
  font-size: 30rpx;
  font-weight: 400;
  padding: 0;
}
.fomr input[type=text]{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  background-color: #f2f2f2;
  border-radius: 40rpx;
  padding-left: 5%;
}
.card_{
  width: 95%;
  padding: 20rpx 0;
}
.card_box{
  padding: 10rpx 0;
  width: 100%;
}
.user_info{
  width: 100%;
  padding: 10rpx 0;
  display: flex;
}
.left_userinfo{
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  overflow: hidden;
}
.left_userinfo image{
  width: 100%;
  height: 100%;
}
.top_user{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.username{
  font-size: 25rpx;
  font-weight: bold;
}
.top_user .qx{
  background-color: #2c5df1;
  font-size: 24rpx;
  display: flex;
  padding: 3rpx 10rpx;
  color: white;
  align-items: center;
  margin: 0 10rpx;
  border-radius: 10rpx;
}
.card_timer{
  font-size: 20rpx;
  color: gray;
  margin-left: 10rpx;
}
.con_box{
  width: 95%;
  margin: auto;
  padding: 10rpx 0;
}
.con_text{
  font-weight: bold;
}
.card_pic{
  padding: 10rpx 0;
  width: 100%;
  margin: auto;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-column-gap: 37rpx;
  grid-row-gap: 20rpx;
  justify-items: center;
}
.card_pic image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
}
.card_more{
  padding: 10rpx 0 20rpx 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f2f2f2;
}
.lef_more{
  font-size: 18rpx;
  color: gray;
  padding: 5rpx 10rpx;
  background-color: rgba(172, 172, 172, 0.2);
  border-radius: 20rpx;
}
.ref_more,.item_icona{
  display: flex;
  align-items: center;
}
.item_icona{
  font-size: 20rpx;
  color: gray;
  margin: 0 10rpx;
}
.item_icona image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}